# archivo .editorconfig en la misma carpeta del proyecto
root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 2

# 4 space indentation
[*.{py,java}]
indent_style = space
indent_size = 4

# 2 space indentation
[*.{js,json,y{a,}ml,html}]
indent_style = space
indent_size = 2

[*.{md,sh}]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2